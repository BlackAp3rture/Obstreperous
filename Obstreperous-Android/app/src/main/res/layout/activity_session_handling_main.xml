<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.obstreperous.SessionHandling.SessionHandlingMain"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Session Handling"
        android:id="@+id/textView12"
        android:textColor="#001e79"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textSize="27dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="16dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insecure Session"
        android:id="@+id/button26"
        android:background="#FFFFFF"
        android:textColor="#001e79"
        android:layout_below="@+id/textView23"
        android:layout_alignRight="@+id/button27"
        android:layout_alignEnd="@+id/button27"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secure Session"
        android:id="@+id/button27"
        android:textColor="#001e79"
        android:background="#FFFFFF"
        android:layout_below="@+id/button26"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Improper session handling occurs when appropriate timeouts are not used when an user closes an app, or when insecure tokens are created, an attacker can modify GET/POST request to see what information the server is expecting, gather leaked information and potentially reconstruct the session with the server."
        android:id="@+id/textView23"
        android:padding="16dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="17dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
