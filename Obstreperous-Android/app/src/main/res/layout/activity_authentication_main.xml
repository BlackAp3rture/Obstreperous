<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.obstreperous.Authentication.AuthenticationMain"
    android:background="#FFFFFF">

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insecure Authentication"
        android:id="@+id/button18"
        android:background="#FFFFFF"
        android:textColor="#001e79"
        android:layout_below="@+id/textView22"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:nestedScrollingEnabled="false" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secure Authentication"
        android:id="@+id/button19"
        android:background="#FFFFFF"
        android:textColor="#001e79"
        android:layout_below="@+id/button18"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Authentication &amp; Authorization"
        android:id="@+id/textView4"
        android:textColor="#001e79"
        android:textSize="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developers assume that after the connection is made, the device is trusted and the connection is trusted and neglect to continuously verify the identity and session of the user (failure to request a new session with user when a user closes the app). Authentication connections are sent in plaintext and reveal account information. Authentication and authorization of the user is done from the application side instead of server side. Authentication variables used are easily spoofed (geo location, device-specific ID). "
        android:id="@+id/textView22"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textAlignment="center" />
</RelativeLayout>
