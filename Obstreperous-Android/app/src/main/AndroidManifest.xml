            android:name=".LocalAccountBypass.VulnerableAccount"
            android:exported="true" />
        <activity
            android:name=".LocalAccountBypass.SecureAccountLogin"
            android:exported="false" />
        <activity
            android:name=".LocalAccountBypass.VulnerableAccountLogin"
